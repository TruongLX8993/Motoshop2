@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/AppJs/product.js"></script>
<div class="page-content-wrapper ">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-body">
                        <h4 class="m-b-30 m-t-0">Danh sách sản phẩm</h4>
                        <div class="row" style="margin-bottom:10px">
                            <div class="col-md-4">
                                <input type="text" id="txtSearch" class="form-control" placeholder="Tìm tên sản phẩm..."/>
                                <span id="searchclear" class="glyphicon glyphicon-remove-circle"></span>
                            </div>
                            <div class="col-md-4">
                                <button id="btnSearch" onclick="Product.loadData()" class="btn btn-primary">Tìm kiếm</button>
                            </div>
                            <div class="col-md-4">
                                <a style="float:right;margin-bottom:5px" href="/Admin/Product/Add" class="btn btn-primary">Thêm mới</a>
                            </div>
                        </div>
                        <div id="loadData" class="row">

                        </div>
                        <div class="col-md-12">
                            <div style="width:50%;margin: 0 auto;" class="" id="paginationholder">
                            </div>
                        </div>
                     </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById('searchclear').onclick = function () {
        document.getElementById('txtSearch').value = '';
        Product.loadData();
    }
</script>

