@model Web.Model.About
@{
    ViewBag.Title = "Xem chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<form class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-1">Tiêu đề:</label>
        <div class="col-md-10" style="margin-top:7px">
            @Model.MetaTitle
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-1">Nội dung:</label>
        <div class="col-md-10" style="margin-top:7px">
            @Html.Raw(Model.Contents)
            <span class="error" id="spcontent"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <a href="/Admin/About" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Quay trở lại</a>
        </div>
    </div>
</form>
