@model Web.Model.Instruction
   
@{
    ViewBag.Title = Model != null ? Model.Title : "";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@if (Model != null)
{
    <ul class="path-url">
        <li><a href="index.html">Trang chủ&nbsp; <i class="fa fa-angle-double-right"></i></a></li>
        <li><a>Hướng dẫn&nbsp; <i class="fa fa-angle-double-right"></i></a></li>
        <li><strong class="text-color-2">@Model.Title</strong></li>
    </ul>
    <div class="more-info">
        <div class="title">
            <h1><span> @Model.Title</span> </h1>
        </div>
        <div class="description">
            @Html.Raw(Model.Contents)
        </div>
    </div>
}
